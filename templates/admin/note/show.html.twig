{% extends 'adminbase.html.twig' %}

{% block title %}University{% endblock %}

{% block body %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                        <li><i class="fa fa-bars"></i>Notes</li>
                        <li><i class="fa fa-square-o"></i>Show Entity Detail</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->


            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ note.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ note.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ note.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ note.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ asset('uploads/images/'~note.image) }}" height="100"></td>
                </tr>
                <tr>
                    <th>Added_by</th>
                    <td>{{ note.addedBy }}</td>
                </tr>
                <tr>
                    <th>Star</th>
                    <td>{{ note.star }}</td>
                </tr>
                <tr>
                    <th>Created_at</th>
                    <td>{{ note.createdAt ? note.createdAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Updated_at</th>
                    <td>{{ note.updatedAt ? note.updatedAt|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ note.status }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('admin_note_index') }}" class="btn btn-primary">Back To List</a>

            <a href="{{ path('admin_note_edit', {'id': note.id}) }}" class="btn btn-primary" style="float:right; width: 68px">Edit</a>


        </section>
    </section>
{% endblock %}
