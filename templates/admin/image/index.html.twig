{% extends 'adminbase.html.twig' %}

{% block title %}Image index{% endblock %}


{% block body %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                        <li><i class="fa fa-bars"></i>Notes</li>
                        <li><i class="fa fa-square-o"></i>Edit Entity Detail</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Image</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for image in images %}
                    <tr>
                        <td>{{ image.id }}</td>
                        <td>{{ image.title }}</td>
                        <td>{{ image.image }}</td>
                        <td>
                            <a href="{{ path('admin_image_show', {'id': image.id}) }}" class="btn btn-primary">show</a>
                            <a href="{{ path('admin_image_edit', {'id': image.id}) }}" class="btn btn-primary">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('admin_image_new') }}" class="btn btn-primary">Create new</a>
            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
{% endblock %}