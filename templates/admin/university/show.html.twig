{% extends 'adminbase.html.twig' %}

{% block title %}University{% endblock %}

{% block body %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                        <li><i class="fa fa-bars"></i>University</li>
                        <li><i class="fa fa-square-o"></i>Show Entity Detail</li>
                    </ol>
                </div>
            </div>
            <!-- page start-->

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ university.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ university.title }}</td>
                </tr>
                <tr>
                    <th>Keywords</th>
                    <td>{{ university.keywords }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ university.description }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td><img src="{{ asset('uploads/images/'~university.image) }}" height="100"></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{ university.status }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('admin_university_index') }}" class="btn btn-primary">Back To List</a>

            <a href="{{ path('admin_university_edit', {'id': university.id}) }}" class="btn btn-primary" style="float:right; width: 68px">Edit</a>

            <!-- page end-->
        </section>
    </section>
    <!--main content end-->
{% endblock %}