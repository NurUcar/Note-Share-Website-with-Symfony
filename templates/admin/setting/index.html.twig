{% extends 'adminbase.html.twig' %}

{% block title %}Settings Page{% endblock %}

{% block body %}
    <!--main content start-->
    <section id="main-content">
        <section class="wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h3 class="page-header"><i class="fa fa fa-bars"></i> Pages</h3>
                    <ol class="breadcrumb">
                        <li><i class="fa fa-home"></i><a href="/admin">Home</a></li>
                        <li><i class="fa fa-bars"></i>Pages</li>
                        <li><i class="fa fa-square-o"></i>Settings</li>
                    </ol>
                </div>
            </div>

            <h2>Settings Page</h2>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Email</th>
                    <th>Status</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for setting in settings %}
                    <tr>
                        <td>{{ setting.id }}</td>
                        <td>{{ setting.title }}</td>
                        <td>{{ setting.email }}</td>
                        <td>{{ setting.status }}</td>
                        <td>
                            <a href="{{ path('setting_show', {'id': setting.id}) }}" class="btn btn-primary">show</a>
                            <a href="{{ path('setting_edit', {'id': setting.id}) }}" class="btn btn-primary">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="20">no records found</td>


                    </tr>
                    <a href="{{ path('setting_new') }}" class="btn btn-primary">Create new</a>
                {% endfor %}
                </tbody>
            </table>


            <!-- page end-->
        </section>
    </section>
    <!--main content end-->

{% endblock %}
